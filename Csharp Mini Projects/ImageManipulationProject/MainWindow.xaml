<Window x:Class="ImageManipulationProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="{DynamicResource PowerToolsBarBorderBrush}" Background="{DynamicResource PowerToolsBarBrush}" BorderThickness="1">
            <Button Content="New Image" Margin="9,9,0,9" HorizontalAlignment="Left" Width="106"/>
        </Border>
        <Grid Grid.Row="1" Background="{DynamicResource BackgroundBrush}"/>

    </Grid>
</Window>

<Application x:Class="Sudoko.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="54"></Setter>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="MaxLength" Value="1"></Setter>
            <Setter Property="Margin" Value="0"></Setter>
            <Setter Property="BorderThickness" Value="2"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
        </Style>

        <Style x:Key="TopMenuButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="54"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>

        <Style x:Key="GameGridStyle" TargetType="Grid">
            <Setter Property="Margin" Value="1"></Setter>
            <Setter Property="Border.BorderThickness" Value="5"></Setter>
            <Setter Property="Border.BorderBrush" Value="Black"></Setter>
        </Style>
    </Application.Resources>
</Application>

@model PortfolioSite.ViewModels.ViewModelBase

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="Portfolio site for Anders Wind" content="">
    <meta name="Anders Wind" content="">
    <title>@Model.Title</title>

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" type="text/css">

    <!-- Custom Fonts -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/font-awesome/css/font-awesome.min.css" type="text/css">

    <!-- Plugin CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/animate.min.css" type="text/css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/freelancer.css" type="text/css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/creative.css" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body id="page-top">

    @RenderBody()
    <hr />
    <footer>
        <p align="center">&copy; 2016 - Anders Wind Steffensen</p>
    </footer>
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/lib/bootstrap/dist/js/jquery.easing.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/jquery.fittext.js"></script>
    <script src="~/lib/bootstrap/dist/js/wow.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/lib/bootstrap/dist/js/creative.js"></script>

    <style>
    .bg-primary {
        background-color: @Model.BackgroundColor;
    }
    .btn-primary {
        background-color: @Model.BackgroundColor;
        border-color: @Model.BackgroundColor;
    }
    .btn-primary:hover,
    .btn-primary:focus,
    .btn-primary.focus,
    .btn-primary:active,
    .btn-primary.active,
    .open > .dropdown-toggle.btn-primary {
        border-color: @Model.BackgroundColorFocus;
        background-color: @Model.BackgroundColorFocus;
    }
    .btn-primary.disabled,
    .btn-primary[disabled],
    fieldset[disabled] .btn-primary,
    .btn-primary.disabled:hover,
    .btn-primary[disabled]:hover,
    fieldset[disabled] .btn-primary:hover,
    .btn-primary.disabled:focus,
    .btn-primary[disabled]:focus,
    fieldset[disabled] .btn-primary:focus,
    .btn-primary.disabled.focus,
    .btn-primary[disabled].focus,
    fieldset[disabled] .btn-primary.focus,
    .btn-primary.disabled:active,
    .btn-primary[disabled]:active,
    fieldset[disabled] .btn-primary:active,
    .btn-primary.disabled.active,
    .btn-primary[disabled].active,
    fieldset[disabled] .btn-primary.active {
        border-color: @Model.BackgroundColor;
        background-color: @Model.BackgroundColor;
    }
    .btn-primary .badge {
        color: @Model.BackgroundColor;
    }
    .navbar-brand {
        color: @Model.BackgroundColor;
    }
    hr {
        border-color: @Model.BackgroundColor;
    }
    .text-primary {
        color: @Model.BackgroundColor;
    }
    a {
        color: @Model.BackgroundColor;
    }
    a:focus, a:hover {
        color: @Model.BackgroundColorFocus;
    }
    .navbar-default .navbar-header .navbar-brand {
        color: @Model.BackgroundColor;
    }
    .navbar-default .navbar-header .navbar-brand:hover,
    .navbar-default .navbar-header .navbar-brand:focus {
        color: @Model.BackgroundColorFocus;
    }
    .navbar-default .nav > li > a:hover,
    .navbar-default .nav > li > a:focus:hover {
        color: @Model.BackgroundColor;
    }
    .navbar-default .nav > li.active > a,
    .navbar-default .nav > li.active > a:focus {
        color: @Model.BackgroundColor !important;
    }
    .portfolio-box .portfolio-box-caption {
        background: @Model.BackgroundColor;
    }
    .btn-outline:hover,
    .btn-outline:focus,
    .btn-outline:active,
    .btn-outline.active {
        color: @Model.BackgroundColorFocus;
    }
    .navbar-default.affix .navbar-header .navbar-brand {
        color: @Model.BackgroundColor;
    }

    .navbar-default.affix .navbar-header .navbar-brand:hover,
    .navbar-default.affix .navbar-header .navbar-brand:focus {
        color: @Model.BackgroundColorFocus;
    }
    .navbar-default.affix .nav > li>a:hover,
    .navbar-default.affix .nav>li>a:focus:hover {
        color: @Model.BackgroundColor;
    }
</style>

</body>
</html>

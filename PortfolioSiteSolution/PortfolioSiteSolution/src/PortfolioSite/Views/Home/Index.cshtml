@model PortfolioSite.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid" >
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top">@Model.HeaderTitle</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a class="page-scroll" href="#about">About</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#services">Services</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#portfolio">Projects</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

<header style="background-image: url(@Model.HeaderImage)">
    <div class="header-content">
        <div class="header-content-inner text-center">
            <img class="img-circle img-responsive center-block" src="@Model.ProfileImage" width="400"/>
            <br/>
            <br/>
            <h1>@Model.MainTitle</h1>
            <hr>
            <p>@Model.MainText</p>
            <a href="#about" class="btn btn-primary btn-xl page-scroll">Find Out More</a>
        </div>
    </div>
</header>

    <section class="bg-primary" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">@Model.AboutTitle</h2>
                    <hr class="light">
                    <p class="text-faded">@Model.AboutText</p>
                    <a href="#" class="btn btn-default btn-xl">Get Started!</a>
                </div>
            </div>
        </div>
    </section>

    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">@Model.ServicesTitle</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                @foreach (var serviceViewModel in Model.ServicesCollection)
                {
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box">
                            <i class="fa fa-4x @serviceViewModel.Symbol wow bounceIn text-primary" data-wow-delay="@serviceViewModel.Delay"></i>
                            <h3>@serviceViewModel.Title</h3>
                            <p class="text-muted">@serviceViewModel.Description</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section class="no-padding" id="portfolio">
        <div class="container-fluid">
            <div class="row no-gutter">
                @foreach (var project in Model.ProjectCollection)
                {
                    <div class="col-lg-4 col-sm-6">
                        <a href="#" class="portfolio-box">
                            <img src="@project.Image" class="img-responsive" alt="">
                            <div class="portfolio-box-caption">
                                <div class="portfolio-box-caption-content">
                                    <div class="project-category text-faded">
                                        @project.Category
                                    </div>
                                    <div class="project-name">
                                        @project.Title
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>

@if (@Model.HaveSecondWebsite)
{
    <aside class="bg-dark">
        <div class="container text-center">
            <div class="call-to-action">
                <h2>@Model.SecondaryWebsiteText</h2>
                <a href="@Model.SecondaryWebsiteLink" class="btn btn-xl wow tada">
                    <img class="img-circle img-responsive center-block" src="@Model.SecondaryWebsiteImage" width="100" />
                </a>
            </div>
        </div>
    </aside>
}


    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">@Model.ContactTitle</h2>
                    <hr class="primary">
                    <p>@Model.ContactText</p>
                </div>
                <div class="col-lg-4 col-lg-offset-2 text-center">
                    <i class="fa fa-phone fa-3x wow bounceIn"></i>
                    <p>@Model.CellPhoneNumber</p>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fa fa-envelope-o fa-3x wow bounceIn" data-wow-delay=".1s"></i>
                    <p>
                        <a href="mailto:your-email@your-domain.com">@Model.Email</a>
                    </p>
                </div>
            </div>
        </div>
    </section>